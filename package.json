{
  "name": "bottom-think",
  "packageManager": "yarn@4.3.1",
  "type": "module",
  "version": "0.0.1",
  "supportedArchitectures": {
    "os": [
      "current",
      "darwin",
      "linux",
      "win32"
    ],
    "cpu": [
      "current",
      "x64",
      "ia32",
      "arm64"
    ],
    "libc": [
      "current",
      "glibc",
      "musl"
    ]
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:cached": "npm run cache:fetch && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint --ext .js,.ts,.astro src",
    "format": "npx prettier --write .",
    "cache:fetch": "node scripts/blog-contents-cache.cjs",
    "cache:purge": "nx reset && rm -f tmp/*",
    "_fetch-notion-blocks": "node scripts/retrieve-block-children.cjs"
  },
  "dependencies": {
    "@astrojs/check": "^0.8.3",
    "@astrojs/react": "^3.6.0",
    "@astrojs/rss": "^4.0.7",
    "@astrojs/ts-plugin": "^1.9.0",
    "@iconify-json/hugeicons": "^1.1.0",
    "@iconify-json/octicon": "^1.1.56",
    "@notionhq/client": "^2.2.15",
    "@nrwl/nx-cloud": "^19.0.0",
    "@supercharge/promise-pool": "^3.2.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "astro": "^4.12.2",
    "astro-icon": "^1.1.0",
    "async-retry": "^1.3.3",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "exif-be-gone": "^1.5.1",
    "katex": "^0.16.11",
    "mermaid": "^10.9.1",
    "metascraper": "^5.45.22",
    "metascraper-description": "^5.45.22",
    "metascraper-image": "^5.45.22",
    "metascraper-title": "^5.45.22",
    "node-fetch": "^3.3.2",
    "nx": "^19.5.3",
    "prismjs": "^1.29.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@types/async-retry": "^1.4.8",
    "@types/katex": "^0.16.7",
    "@types/prismjs": "^1.26.4",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@typescript-eslint/typescript-estree": "^7.17.0",
    "cli-progress": "^3.12.0",
    "eslint": "8.57.0",
    "eslint-plugin-astro": "^1.2.3"
  },
  "nx": {
    "targets": {
      "_fetch-notion-blocks": {
        "inputs": [
          "!{projectRoot}/**/*",
          "!{projectRoot}/**/.*",
          "!{projectRoot}/**/.*/**/*",
          {
            "env": "DATABASE_ID"
          }
        ],
        "outputs": [
          "{projectRoot}/tmp"
        ]
      }
    },
    "includedScripts": [
      "_fetch-notion-blocks"
    ]
  },
  "license": "MIT"
}
