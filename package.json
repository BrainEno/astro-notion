{
  "name": "bottom-think",
  "packageManager": "yarn@4.3.1",
  "type": "module",
  "version": "0.0.1",
  "supportedArchitectures": {
    "os": [
      "current",
      "darwin",
      "linux",
      "win32"
    ],
    "cpu": [
      "current",
      "x64",
      "ia32",
      "arm64"
    ],
    "libc": [
      "current",
      "glibc",
      "musl"
    ]
  },
  "scripts": {
    "dev": "wrangler types && astro dev",
    "start": "astro dev",
    "build": "wrangler types && astro check && astro build",
    "build:cached": "npm run cache:fetch && astro build",
    "preview": "wrangler types && astro build && wrangler pages dev",
    "deploy": "astro build && wrangler pages deploy",
    "astro": "astro",
    "cf-typegen": "wrangler types",
    "lint": "eslint --ext .js,.ts,.astro src/",
    "format": "npx prettier --write .",
    "cache:fetch": "node scripts/blog-contents-cache.cjs",
    "cache:purge": "nx reset && rm -f tmp/*",
    "_fetch-notion-blocks": "node scripts/retrieve-block-children.cjs"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^12.0.1",
    "@astrojs/netlify": "^6.0.0",
    "@astrojs/preact": "^4.0.0",
    "@astrojs/rss": "^4.0.10",
    "@astrojs/ts-plugin": "^1.10.4",
    "@iconify-json/hugeicons": "^1.2.1",
    "@iconify-json/octicon": "^1.2.2",
    "@notionhq/client": "^2.2.15",
    "@nrwl/nx-cloud": "^19.1.0",
    "@supercharge/promise-pool": "^3.2.0",
    "astro": "^5.0.4",
    "astro-icon": "^1.1.4",
    "async-retry": "^1.3.3",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "exif-be-gone": "^1.5.1",
    "install": "^0.13.0",
    "katex": "^0.16.15",
    "marked": "^15.0.3",
    "mermaid": "^11.4.1",
    "metascraper": "^5.45.25",
    "metascraper-description": "^5.45.25",
    "metascraper-image": "^5.45.27",
    "metascraper-title": "^5.45.25",
    "node-fetch": "^3.3.2",
    "nx": "^20.2.1",
    "preact": "^10.25.1",
    "prismjs": "^1.29.0",
    "typescript": "^5.7.2",
    "wrangler": "^3.94.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@types/async-retry": "^1.4.9",
    "@types/katex": "^0.16.7",
    "@types/prismjs": "^1.26.5",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@typescript-eslint/typescript-estree": "^8.18.0",
    "cli-progress": "^3.12.0",
    "eslint": "^8.57.1",
    "eslint-plugin-astro": "^1.3.1"
  },
  "nx": {
    "targets": {
      "_fetch-notion-blocks": {
        "inputs": [
          "!{projectRoot}/**/*",
          "!{projectRoot}/**/.*",
          "!{projectRoot}/**/.*/**/*",
          {
            "env": "DATABASE_ID"
          }
        ],
        "outputs": [
          "{projectRoot}/tmp"
        ]
      }
    },
    "includedScripts": [
      "_fetch-notion-blocks"
    ]
  },
  "overrides": {
    "react": "npm:@preact/compat@latest",
    "react-dom": "npm:@preact/compat@latest"
  },
  "aliasify": {
    "aliases": {
      "react": "preact-compat",
      "react-dom": "preact-compat",
      "create-react-class": "preact-compat/lib/create-react-class",
      "react-dom-factories": "preact-compat/lib/react-dom-factories"
    }
  },
  "license": "MIT"
}
