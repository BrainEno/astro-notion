---
interface Props {
  title: string
  href: string
}

const { href, title } = Astro.props
---

<li class="header-link">
  <a href={href}>{title}</a>
</li>

<style>
  .header-link {
    display: flex;
    list-style: none;
    margin-left: 18px;
  }
  .header-link > a {
    font-weight: 500;
    text-decoration: none;
    text-transform: uppercase;
    font-size: 18px;
  }
  .header-link > a:hover {
    color: #000;
  }

  @media screen and (max-width: 700px) {
    .header-link {
      width: 100%;
      margin: 0;
      margin-top: 15px;
    }
  }
</style>
