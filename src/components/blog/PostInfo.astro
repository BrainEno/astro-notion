---
import { getTagLink } from '../../lib/blog-helpers'
import type { Post, SelectProperty } from '../../lib/interfaces'
import '../../styles/tag-color.css'

interface Props {
  post: Post
}

const { post } = Astro.props
---

<div class="post-info-container">
  <a href={`/posts/${post.Slug}`} class="post-bg-container">
    {
      post.FeaturedImage && post.FeaturedImage.Url ? (
        <img
          src={post.FeaturedImage!.Url}
          alt={post.Title}
          style={{
            objectFit: 'cover',
          }}
          loading="lazy"
          class="post-img"
        />
      ) : (
        <div class="post-bg">
          <h3>{post.Title}</h3>
        </div>
      )
    }
    <div class="tags">
      {
        post.Tags &&
          post.Tags.length > 0 &&
          post.Tags.map((tag: SelectProperty) => (
            <a href={getTagLink(tag.name)} class={`tag ${tag.color}`}>
              {tag.name}
            </a>
          ))
      }
    </div>
  </a>

  <section>
    <h3 class="post-title">{post.Title}</h3>
    <div class="author-text">
      <span>
        {post.Date}
      </span>
    </div>
    <div class="description-text">
      {post.Excerpt}
    </div>
  </section>
  <p class="author-text">
    <a href={`/posts/${post.Slug}`}> Read More... </a>
  </p>
</div>

<style>
  .post-info-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    width: 350px;
    height: 700px;
    position: relative;
  }

  .post-bg-container {
    width: 350px;
    height: 350px;
    object-fit: cover;
  }

  .post-bg {
    background-color: #e5e5f7;
    opacity: 0.8;
    background:
      linear-gradient(135deg, #56abbf55 25%, transparent 25%) -10px 0/ 20px 20px,
      linear-gradient(225deg, #56abbf 25%, transparent 25%) -10px 0/ 20px 20px,
      linear-gradient(315deg, #56abbf55 25%, transparent 25%) 0px 0/ 20px 20px,
      linear-gradient(45deg, #56abbf 25%, #e5e5f7 25%) 0px 0/ 20px 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .post-bg h3 {
    transform-origin: center;
    transform: scale(1) translateZ(0);
    transition: all 200ms linear;
    color: rgb(38, 99, 190);
    font-size: 22px;
    font-weight: 600;
    filter: brightness(0.6) saturate(1) contrast(1.2) blur(2px);
  }

  .post-bg:hover h3 {
    transform: scale(1.25) translateZ(0);
    color: rgb(1, 4, 32);
    filter: brightness(0.75) saturate(1.2) contrast(0.85) blur(0.2px);
  }

  .post-bg,
  .post-img {
    width: 100%;
    height: 100%;
  }

  .tag {
    font-size: 16px;
    color: white;
    padding: 4px 9px;
    font-weight: 500;
    border-radius: 5px;
    position: absolute;
    right: 20px;
    top: 85px;
  }

  .post-title {
    font-size: 18px;
    font-weight: 600;
    margin: 12px 0;
    padding: 0;
  }

  .author-text {
    font-size: 15px;
    font-weight: 400px;
    color: gray;
    margin: 12px 0;
  }

  .description-text {
    width: 350px;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-size: 16px;
    font-weight: 500;
  }

  @media screen and (max-width: 700px) {
    .post-info-container,
    .post-bg-container,
    .description-text {
      width: 100%;
    }

    .post-info-container {
      height: 540px;
    }

    .post-bg-container {
      height: 300px;
    }
    .tag {
      top: 35px;
    }
  }
</style>
